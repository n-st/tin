[Unit]
Description=Tin paste HTTP server
Requires=network.target
After=network.target

[Service]
Environment=PYTHONPATH=/opt/tin/
Environment=TIN_PORT=80
Environment=TIN_DATAPATH=/var/lib/tin/data/
Environment=TIN_INDEX=/var/lib/tin/index.html

Type=simple
ExecStart=/usr/local/bin/twistd --nodaemon --uid pastetin --gid nogroup web --port "tcp6:${TIN_PORT}" --wsgi httpserver.app
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
